{
  "compilerOptions": {
    "target": "ES2022",
    "module": "es2020",
    "lib": ["ES2022"],
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "bundler",
    "types": ["node", "vitest/globals"]
  },
  "include": ["infrastructure/**/*", "platforms/**/*", "src/**/*", "__tests__/**/*"],
  "exclude": ["node_modules", "dist"]
}
